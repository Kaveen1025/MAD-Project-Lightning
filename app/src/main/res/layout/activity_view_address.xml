<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/address1text"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Address "
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/nametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address1text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:text="Customer Name"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/addresstext"
            android:layout_width="383dp"
            android:layout_height="81dp"
            android:layout_below="@id/address1text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="62dp"
            android:text="Address"
            android:textColor="#000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/provinceSttatext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addresstext"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:text="Province - "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cityStext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/provinceSttatext"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="City - "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/provincetext"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="190dp"
            android:layout_toRightOf="@id/provinceSttatext"
            android:text="Province"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/citytext"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="224dp"
            android:layout_toRightOf="@id/cityStext"
            android:text="City"
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="76dp"
            android:layout_marginRight="5dp"

            android:layout_toRightOf="@id/address1text"
            android:backgroundTint="#008000"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>