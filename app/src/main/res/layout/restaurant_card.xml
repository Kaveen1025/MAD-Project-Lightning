<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="360dp"
    android:layout_height="270dp"
    android:layout_marginStart="22dp"
    android:layout_marginLeft="12dp"
    android:layout_marginEnd="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView2"
    android:clickable="false">

        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:clickable="false"
            android:visibility="visible"
            app:srcCompat="@drawable/rest11"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/RestLogo"
                android:layout_width="113dp"
                android:layout_height="67dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="191dp"
                android:layout_marginEnd="238dp"
                android:layout_marginRight="238dp"
                app:srcCompat="@drawable/restlogo"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/RestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="130dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="188dp"
                android:layout_marginEnd="71dp"
                android:layout_marginRight="71dp"
                android:text="@string/restaurantName1"
                android:textColor="@color/ThemeBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/cuisineType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="131dp"
                android:layout_marginLeft="131dp"
                android:layout_marginTop="215dp"
                android:text="@string/CuisineType"
                android:textColor="@color/ThemeBlack"
                tools:ignore="MissingClass" />

            <TextView
                android:id="@+id/RestAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="131dp"
                android:layout_marginLeft="131dp"
                android:layout_marginTop="239dp"
                android:text="@string/Location1"
                android:textColor="@color/ThemeBlack" />

            <ImageButton
                android:id="@+id/favImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="70dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_favvv"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="231dp"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_rating"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/restRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                android:text="@string/Ratings" />

        </RelativeLayout>



</androidx.cardview.widget.CardView>